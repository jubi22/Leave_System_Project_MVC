@model LeaveSystem.ViewModels.EmployeeViewModel
@{
    ViewBag.Title = "EditEmployee";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="mx-auto loginbox" style="width:500px">
            <h4>Update Profile Information</h4>
            <form class="needs-validation" novalidate="novalidate" action="~/account/EditEmployee" method="post">
                @Html.AntiForgeryToken()
                <div class="form-group mr-3">
                    <label for="empid">Employee ID</label>
                    <input type="text" class="form-control" id="empid" name="EmployeeID"
                           value="@Model.EmployeeID" />
                </div>
                <div class="form-group mr-3">
                    <label for="email">Email</label>
                    <input type="text" class="form-control" id="email" name="EmployeeEmail"
                           value="@Model.EmployeeEmail" disabled />
                </div>
                <div class="form-group mr-3">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="EmployeeName" />
                 
                </div>

                <input type="hidden" name="EmployeeID" value="@Model.EmployeeID" />
                <div class="form-group mr-3">
                    <label for="phone">Contact.No</label>
                    <input type="text" class="form-control" id="phone" name="EmployeeContactNo" />
                </div>
                <button class="btn btn-danger" type="submit">Update Profile</button>
                <button formaction="/home/index" class="btn btn-danger">Cancel</button>
            </form>
        </div>
    </div>
</div>
<script>
    $(document).on("submit", "needs-validation", validate);
    $(".needs-validation input").blur(validate);
    function validate(event) {
        if ($(".needs-validation")[0].checkValidity() == false) {
            event.preventDefault();
        }
        $(".needs-validation")[0].classList.add("was-validated");
    }
</script>
