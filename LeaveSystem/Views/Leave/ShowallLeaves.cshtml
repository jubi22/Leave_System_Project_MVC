@model List<LeaveSystem.ViewModels.LeaveDetailsViewModel>
@{
    ViewBag.Title = "Display";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <table class="table">
            <tr>
                <th>Employee ID</th>
                <th>Leave Start</th>
                <th>Leave End</th>
                <th>Leave Reason</th>             
                <th>Status</th>
                <th>Approved Date</th>
            </tr>
            @foreach (var k in Model)
            {
                <tr>
                   
                    <td>@k.EmployeeID</td>
                    <td>@k.LeaveStartDate</td>
                    <td>@k.LeaveEndDate</td>
                    <td>@k.LeaveDescription</td>                
                    <td>@k.Status</td>
                    <td>@k.ApprovedDate</td>
                </tr>
            }

        </table>

    </div>
</div>

